<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:minHeight="100dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:paddingLeft="16dp"
                android:paddingTop="5dp"
                android:id="@+id/memberpic"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/name_string"
                android:id="@+id/fullname"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/memberpic"
                android:paddingTop="6dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Block X Man"
                android:id="@+id/position"
                android:textSize="13sp"
                android:textColor="#daa520"
                android:layout_toRightOf="@+id/memberpic"
                android:layout_below="@+id/fullname"
                android:paddingLeft="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout">

            <TextView
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                tools:text="This is the message field"
                android:id="@+id/postedText"
                android:textColor="#d6000000"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postedImage"
                tools:src="@drawable/sampler"
                android:adjustViewBounds="true"
                android:layout_below="@+id/postedText" />

            <VideoView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/videoView"
                android:layout_below="@+id/postedText" />


        </RelativeLayout>
        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#36465D"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/postedImage" />


    </LinearLayout>

</android.support.v7.widget.CardView>
